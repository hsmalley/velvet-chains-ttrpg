{
  "name": "velvet-chains-ttrpg",
  "type": "module",
  "version": "0.0.1",
  "description": "Neon corsair TTRPG codex for the Velvet Chains & Voidlight setting.",
  "keywords": [
    "velvet-chains",
    "voidlight",
    "ttrpg",
    "astro",
    "starlight",
    "consent",
    "space-pirate"
  ],
  "scripts": {
    "dev": "astro dev",
    "build": "npm run validate:content && astro build",
    "preview": "astro preview",
    "deploy": "npm run build && npx gh-pages -d dist",
    "validate:content": "node scripts/validate-content.mjs",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"**/*.mdx\" \"#node_modules\" \"#dist\" \"#out\" \"#public\" \"#obsidian-theme\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/starlight": "^0.36.0",
    "astro": "^5.6.1",
    "sharp": "^0.34.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "markdownlint-cli2": "^0.18.1",
    "yaml": "^2.8.1"
  }
}
