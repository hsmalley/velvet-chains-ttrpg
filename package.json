{
  "name": "velvet-chains-ttrpg",
  "type": "module",
  "version": "0.0.1",
  "description": "Neon corsair TTRPG codex for the Velvet Chains & Voidlight setting.",
  "keywords": [
    "velvet-chains",
    "voidlight",
    "ttrpg",
    "astro",
    "starlight",
    "consent",
    "space-pirate"
  ],
  "scripts": {
    "dev": "astro dev",
    "build": "npm run validate:content && astro build",
    "preview": "astro preview",
    "deploy": "npm run build && npx gh-pages -d dist",
    "check:astro": "astro check",
    "check:safeword": "node scripts/validate-content.mjs",
    "validate:content": "node scripts/validate-content.mjs",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#dist\" \"#out\" \"#public\" \"#obsidian-theme\" && markdownlint-cli2 --config .markdownlint-cli2-mdx.yaml \"**/*.mdx\" \"#node_modules\" \"#dist\" \"#out\" \"#public\" \"#obsidian-theme\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/starlight": "^0.36.0",
    "astro": "^5.14.4",
    "sharp": "^0.34.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "yaml": "^2.8.1"
  }
}
