{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Velvet Chains Character Sheet",
  "type": "object",
  "required": ["id", "name", "system", "alignment", "tier", "arc", "affiliation", "archetype"],
  "properties": {
    "title": { "type": "string" },
    "alias": { "type": "string" },
    "description": { "type": "string" },
    "entryType": { "type": "string" },
    "id": { "type": "string" },
    "name": { "type": "string" },
    "system": {
      "type": "string",
      "enum": ["Velvet Chains Daggerheart", "velvetchains-daggerheart"]
    },
    "alignment": { "type": "string" },
    "tier": { "type": ["string", "integer"] },
    "arc": { "type": "string" },
    "affiliation": { "type": "string" },
    "archetype": { "type": "string" },
    "File-Hash": { "type": "string" },
    "safeword": { "type": "string" },
    "publish": { "type": "boolean" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "hopeTags": { "type": "array", "items": { "type": "string" } },
    "corruptionLevel": { "type": ["integer", "string"] },
    "soulMarks": { "type": "array", "items": { "type": "string" } },
    "customFeats": { "type": "array", "items": { "type": "string" } },
    "stringBonds": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "target": { "type": "string" },
          "reason": { "type": "string" }
        },
        "required": ["target"],
        "additionalProperties": true
      }
    },
    "stressTracks": {
      "type": "object",
      "properties": {
        "heart": {
          "type": "object",
          "properties": {
            "current": { "type": "integer", "minimum": 0 },
            "max": { "type": "integer", "minimum": 0 }
          },
          "required": ["current", "max"],
          "additionalProperties": false
        },
        "pulse": {
          "type": "object",
          "properties": {
            "current": { "type": "integer", "minimum": 0 },
            "max": { "type": "integer", "minimum": 0 }
          },
          "required": ["current", "max"],
          "additionalProperties": false
        },
        "mind": {
          "type": "object",
          "properties": {
            "current": { "type": "integer", "minimum": 0 },
            "max": { "type": "integer", "minimum": 0 }
          },
          "required": ["current", "max"],
          "additionalProperties": false
        }
      }
    },
    "approaches": {
      "type": "object",
      "properties": {
        "body": { "type": "string" },
        "mind": { "type": "string" },
        "spirit": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
