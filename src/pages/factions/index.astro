---
import { getCollection } from 'astro:content';

const factions = await getCollection('factions');
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Factions — Velvet Chains</title>
  </head>
  <body>
    <main data-pagefind-body>
      <h1>🕸️ Factions</h1>
      <ul>
        {factions.map(f => (
          <li><a href={`/factions/${f.slug}`}>{f.data.name}</a></li>
        ))}
      </ul>
    </main>
  </body>
</html>
