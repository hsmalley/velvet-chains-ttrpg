---
const { name, species, bonded_to, tags } = Astro.props.entry.data;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{name} — Velvet Chains</title>
  </head>
  <body>
    <main data-pagefind-body>
      <h1>🧝‍♀️ {name}</h1>
      <h2>{species} — Bonded to {bonded_to}</h2>

      <table>
        <tr><th>Species</th><td>{species}</td></tr>
        <tr><th>Bonded To</th><td>{bonded_to}</td></tr>
        <tr><th>Tags</th><td>{tags.join(', ')}</td></tr>
      </table>

      <slot />
    </main>
  </body>
</html>
